<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagenModelo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/c63"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nombreModelo"
            android:gravity="center"
            android:alpha="0.7"
            android:layout_width="0dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:text="modelo"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/imagenModelo"
            app:layout_constraintEnd_toEndOf="@+id/imagenModelo"
            app:layout_constraintStart_toStartOf="@+id/imagenModelo" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>